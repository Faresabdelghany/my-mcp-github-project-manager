{
  "name": "mcp-github-project-manager",
  "version": "1.0.0",
  "description": "A comprehensive Model Context Protocol (MCP) server for GitHub project management with requirements traceability and advanced project workflows",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "mcp-github-project-manager": "dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/index.ts",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --testPathPattern=integration",
    "test:e2e": "jest --testPathPattern=e2e",
    "test:e2e:tools": "node scripts/run-e2e-tests.js",
    "test:e2e:tools:real": "E2E_REAL_API=true npm run test:e2e:tools",
    "test:enhanced": "jest --testPathPattern='enhanced'",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "format": "prettier --write src/**/*.ts",
    "type-check": "tsc --noEmit",
    "clean": "rimraf dist",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "github",
    "project-management",
    "requirements-traceability",
    "task-management"
  ],
  "author": "Fares Abdelghany <fares@example.com>",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.6.0",
    "@octokit/graphql": "^8.1.1",
    "@octokit/rest": "^21.0.2",
    "@octokit/webhooks": "^13.3.0",
    "commander": "^12.1.0",
    "dotenv": "^16.4.5",
    "express": "^4.21.1",
    "zod": "^3.23.8",
    "winston": "^3.15.0",
    "axios": "^1.7.7",
    "fs-extra": "^11.2.0",
    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "@types/express": "^5.0.0",
    "@types/fs-extra": "^11.0.4",
    "@types/jest": "^29.5.14",
    "@types/lodash": "^4.17.13",
    "@types/node": "^22.9.0",
    "@typescript-eslint/eslint-plugin": "^8.15.0",
    "@typescript-eslint/parser": "^8.15.0",
    "eslint": "^9.15.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "jest": "^29.7.0",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.2.5",
    "tsx": "^4.19.2",
    "typescript": "^5.6.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Faresabdelghany/my-mcp-github-project-manager.git"
  },
  "bugs": {
    "url": "https://github.com/Faresabdelghany/my-mcp-github-project-manager/issues"
  },
  "homepage": "https://github.com/Faresabdelghany/my-mcp-github-project-manager#readme"
}